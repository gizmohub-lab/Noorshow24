<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Gallery Images</title>
    <script>
        function validateForm() {
            const inputs = document.querySelectorAll('input[type="file"]');
            for (let i = 0; i < inputs.length; i++) {
                if (!inputs[i].files[0]) {
                    alert('Please upload an image in all 6 fields!');
                    return false;
                }
            }
            return true;
        }
    </script>
</head>
<body>
    <h1>Upload 6 Images to Gallery</h1>
    <form action="/uploads" method="POST" enctype="multipart/form-data" onsubmit="return validateForm()">
        <input type="text" name="title" placeholder="Image Title" required><br><br>
        
